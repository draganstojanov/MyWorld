<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="currencyItem"
            type="com.andraganoid.myworld.model.CurrenciesItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/currencyItemCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="@{currencyItem.code}"
            android:gravity="center"
            android:textSize="@dimen/country_native_name_text_size"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/currencyItemNameTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@{currencyItem.name}"
            android:gravity="center"
            android:textSize="@dimen/country_native_name_text_size"
            app:layout_constraintEnd_toStartOf="@+id/currencyItemSymbolTv"
            app:layout_constraintStart_toEndOf="@+id/currencyItemCodeTv" />

        <TextView
            android:id="@+id/currencyItemSymbolTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{currencyItem.symbol}"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="@dimen/country_native_name_text_size"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>