<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="regionalItem"
            type="com.andraganoid.myworld.model.RegionalBlocsItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/regionalItemAcronymTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{regionalItem.acronym}"
            android:textSize="@dimen/country_native_name_text_size"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/regionalItemNameTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="@{regionalItem.name}"
            android:textSize="@dimen/country_native_name_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regionalItemAcronymTv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>