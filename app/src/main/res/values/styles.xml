<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/pontano_sans</item>
    </style>

    <style name="infoLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="infoTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:paddingStart">8dp</item>
    </style>


</resources>
